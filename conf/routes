# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET           /                                 controllers.HomeController.index
# An example controller showing how to use dependency injection
GET           /count                            controllers.CountController.count
# An example controller showing how to write asynchronous code
GET           /message                          controllers.AsyncController.message

GET           /api/windy/books                  controllers.BookController.getAll
GET           /api/windy/books/:uuid            controllers.BookController.get(uuid)
POST          /api/windy/books                  controllers.BookController.create
PUT           /api/windy/books                  controllers.BookController.update
DELETE        /api/windy/books/:uuid            controllers.BookController.delete(uuid)

GET           /api/windy/magazines              controllers.MagazineController.getAll
GET           /api/windy/magazines/:uuid        controllers.MagazineController.get(uuid)
POST          /api/windy/magazines              controllers.MagazineController.create
PUT           /api/windy/magazines              controllers.MagazineController.update
DELETE        /api/windy/magazines/:uuid        controllers.MagazineController.delete(uuid)

GET           /api/windy/eventstorage/get       controllers.EventStorageController.list()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)
